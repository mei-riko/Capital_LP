    - var advantages    = [{"icon":"./icon/icon-client.svg","title":"62 000","intro":"постоянных клиентов"},{"icon":"./icon/icon-market.svg","title":"$232 млрд","intro":"оборот по всем рынкам"},{"icon":"./icon/icon-security.svg","title":"21 год","intro":"на финансовом рынке"}]

mixin company(object)
    .item.item_company=object.name
mixin product(object)
