extends ../blocks/main.pug

block variables
    - var pageTitle     = "Landing Page"
    - var companies     = [{"logo":"./icon/yandex.svg","name":"YNDX","fullname":"Yandex NV","subtotal":"$21.65","total":"23 745","count":"15 шт."},{"logo":"./icon/tesla.svg","name":"TSLA","fullname":"Tesla inc.","subtotal":"$46.96","total":"27 469","count":"8 шт."}]
    - var products      = [{"type":"Смартфон","name":"Samsung Galaxy S7","img":"./img/phone.png","price":"54 000"},{"type":"Умные часы","name":"Apple Watch Series 2","img":"./img/clock.png","price":"34 000"}]
    - var advantages    = [{"icon":"./icon/icon-client.svg","title":"62 000","intro":"постоянных клиентов"},{"icon":"./icon/icon-market.svg","title":"$232 млрд","intro":"оборот по всем рынкам"},{"icon":"./icon/icon-security.svg","title":"21 год","intro":"на финансовом рынке"}]

mixin company(object)
    .item.item_company
        .item_company__count=object.count
        .item_company__info 
            .item_company__logo
                img.img-fluid(src=object.logo)
            .item__title.item_company__name=object.name
            .item_company__fullname=object.fullname
        p.item_company__label Стоимость акции
        .item__title.item_company__subtotal=object.subtotal
        p.item_company__label Общая сумма в рублях
        .item__title.item_company__total=object.total
            span.item__rub ₽
mixin product(object)
    .item.item_product
        .item_product__type=object.type
        .item_product__name=object.name
        .item_product__img
            img.img-fluid(src=object.img)
        .item__title.item_product__price=object.price
            span.item__rub ₽
mixin advantageItem(object)
    .item.item_advantage
        .item_advantage__icon
            img.img-fluid(src=object.icon)
        .item_advantage__title=object.title
        .item_advantage__intro=object.intro
