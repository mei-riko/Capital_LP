mixin company(object)
    .item.item_company&attributes(attributes)
        .item_company__count=object.count
        .item_company__info 
            .item_company__logo
                img.img-fluid(src=object.logo)
            .item__title.item_company__name=object.name
            .item_company__fullname=object.fullname
        .item_company__col
            p.item_company__label Стоимость 
                span.d-xs-none акции
            .item__title.item_company__subtotal=object.subtotal
        .item_company__col
            p.item_company__label Общая сумма 
                span.d-md-none в&nbsp;рублях
            .item__title.item_company__total
                span.item__value=object.total
                span.item__rub ₽
mixin product(object)
    .item.item_product&attributes(attributes)
        .item_product__type=object.type
        .item_product__name=object.name
        .item_product__img
            img.img-fluid(src=object.img)
        .item__title.item_product__price
            span.item__value=object.price
            span.item__rub ₽

