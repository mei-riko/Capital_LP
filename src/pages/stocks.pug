extends ../blocks/main.pug

block variables
    - var pageTitle     = "Торги на бирже"
    - var companies     = [{"name":"YNDX","fullname":"Yandex NV","subtotal":"$21.65","total":"23 745","count":"15 шт."},{"name":"TSLA","fullname":"Tesla inc.","subtotal":"$46.96","total":"27 469","count":"8 шт."}]

mixin companyStocks(object)
    .stocks__company
        .item.item_stocks
            .item_stocks__count=object.count
            .item_stocks__info
                .item_stocks__title=object.name
                .item_stocks__subtitle=object.fullname
            .item_stocks__info
                .item_stocks__title=object.subtotal
                .item_stocks__subtitle Цена за акцию
            .item_stocks__info
                .item_stocks__title=object.total
                .item_stocks__subtitle Общая стоимость
block content
    section.stocks
        .container
            .row.justify-content-center 
                .col-5.stocks__info
                    .stocks__info-grid
                        for object in companies
                            +companyStocks(object)
                        .stocks__graph
                            img.img-fluid(src="./img/graph-1.svg")
                    .mt-2.stocks__btns
                        .stocks__btns-item
                            a.btn.btn_action(href="stocks-final.html") Подождать еще год
                        .stocks__btns-item
                            a.btn.btn_secondary(href="result.html") Продать акции
                .col-3
                    .stocks__chat
                        .stocks__chat-body
